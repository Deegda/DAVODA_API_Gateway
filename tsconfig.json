{
  "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "declaration": true,
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "target": "es2017",
      "sourceMap": true,
      "outDir": "./dist",
      "baseUrl": "./",
      "incremental": true,
      "skipLibCheck": true,
      "strict": true,
      "noImplicitAny": true,
      "forceConsistentCasingInFileNames": false,
      "noFallthroughCasesInSwitch": false,
      "typeRoots": [
          "./node_modules/@types"
      ],
      "paths": {
          "@src": ["./src"]
      }
  }
}
